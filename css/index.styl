fonttitle = 'Megrim', cursive

header
    position absolute
    left 0
    right 0
    background #198FCE
    height 40px
    
    h1
        font-size 18px
        font-family fonttitle
        color #fff
        margin-left: 20px;

aside
    position absolute
    left 0
    width 15%
    top 40px
    bottom 0
    background #eee
    border-right 1px solid #ddd
    
.viewCode
    position absolute
    right 0
    top 40px
    bottom 0
    width 30%
    background #eee
    
.viewHtml
    position absolute
    right 10px
    left 10px
    top 10px
    bottom 50%
    background #ddd
    
.viewJson
    position absolute
    right 10px
    left 10px
    top 52%
    bottom 10px
    background #ddd
    
.viewHtml,
.viewJson
    font-family monospace;
    
    code
        width 100%
        height 100%
        display block